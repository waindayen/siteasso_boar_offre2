---
const { project } = Astro.props;
---

<section class="relative py-12 bg-gradient-to-br from-emerald-900 to-emerald-700">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <span class="inline-block text-emerald-300 font-medium tracking-wider text-sm mb-4">
          {project.category.toUpperCase()}
        </span>
        <h1 class="font-display text-4xl md:text-5xl font-bold text-white mb-6">
          {project.title}
        </h1>
        <p class="text-xl text-emerald-100 mb-8">
          {project.description}
        </p>
        <div class="bg-white/10 backdrop-blur-md rounded-lg p-6 mb-8">
          <div class="flex justify-between text-sm text-emerald-100 mb-2">
            <span>{project.raised.toLocaleString('fr-FR')}€ collectés</span>
            <span>Objectif : {project.goal.toLocaleString('fr-FR')}€</span>
          </div>
          <div class="w-full bg-white/20 rounded-full h-2">
            <div
              class="bg-emerald-400 h-2 rounded-full"
              style={`width: ${project.progress}%`}
            ></div>
          </div>
        </div>
        <a
          href={`/projets/${project.id}/soutenir`}
          class="inline-block bg-white text-emerald-800 px-8 py-4 rounded-full text-lg font-medium hover:bg-emerald-100 transition-colors duration-300"
        >
          Soutenir ce projet
          <span class="ml-2">→</span>
        </a>
      </div>
      <div class="relative">
        <img
          src={project.image}
          alt={project.title}
          class="rounded-xl shadow-2xl"
        />
      </div>
    </div>
  </div>
</section>