---
const { project } = Astro.props;

const donationAmounts = [30, 50, 100, 200];
---

<section class="py-24 bg-emerald-50">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="font-display text-3xl font-bold text-gray-900 mb-8 text-center">
        Je soutiens ce projet
      </h2>

      <div id="successContainer" class="hidden">
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Merci pour votre g√©n√©rosit√© !</h3>
          <p class="text-gray-600 mb-6">Votre don a √©t√© enregistr√© avec succ√®s. Vous recevrez un email de confirmation dans quelques instants.</p>
          <div class="space-y-4">
            <p class="text-emerald-600 font-medium">Montant du don : <span id="donationAmount" class="font-bold"></span>‚Ç¨</p>
            <p class="text-sm text-gray-500">Un re√ßu fiscal vous sera envoy√© prochainement</p>
          </div>
          <button
            onclick="location.reload()"
            class="mt-8 px-6 py-2 bg-emerald-600 text-white rounded-full hover:bg-emerald-700 transition-colors"
          >
            Faire un autre don
          </button>
        </div>
      </div>

      <form id="donationForm" class="space-y-8" data-project-id={project.id}>
        <div class="space-y-4">
          <label class="text-lg font-semibold text-gray-900 block">
            Montant du don
          </label>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {donationAmounts.map((amount) => (
              <label class="relative">
                <input
                  type="radio"
                  name="amount"
                  value={amount}
                  required
                  class="peer sr-only"
                />
                <div class="p-4 text-center border-2 border-gray-200 rounded-lg cursor-pointer transition-all peer-checked:border-emerald-500 peer-checked:bg-emerald-50">
                  <div class="text-2xl font-bold text-gray-900">{amount}‚Ç¨</div>
                </div>
              </label>
            ))}
          </div>
        </div>

        <div class="space-y-4">
          <label class="text-lg font-semibold text-gray-900 block">
            Type de don
          </label>
          <div class="grid grid-cols-2 gap-4">
            <label class="relative">
              <input 
                type="radio" 
                name="frequency" 
                value="once" 
                checked 
                class="peer sr-only"
              />
              <div class="p-4 text-center border-2 border-gray-200 rounded-lg cursor-pointer transition-all peer-checked:border-emerald-500 peer-checked:bg-emerald-50">
                Don unique
              </div>
            </label>
            <label class="relative">
              <input 
                type="radio" 
                name="frequency" 
                value="monthly" 
                class="peer sr-only"
              />
              <div class="p-4 text-center border-2 border-gray-200 rounded-lg cursor-pointer transition-all peer-checked:border-emerald-500 peer-checked:bg-emerald-50">
                Don mensuel
              </div>
            </label>
          </div>
        </div>

        <div class="space-y-4">
          <label class="text-lg font-semibold text-gray-900 block">
            Vos coordonn√©es
          </label>
          <div class="grid md:grid-cols-2 gap-4">
            <input
              type="text"
              name="firstName"
              placeholder="Pr√©nom"
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            />
            <input
              type="text"
              name="lastName"
              placeholder="Nom"
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            />
            <input
              type="email"
              name="email"
              placeholder="Email"
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            />
            <input
              type="tel"
              name="phone"
              placeholder="T√©l√©phone"
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            />
          </div>
        </div>

        <div class="space-y-4">
          <label class="text-lg font-semibold text-gray-900 block">
            Message de soutien (optionnel)
          </label>
          <textarea
            name="message"
            placeholder="Votre message d'encouragement..."
            rows="3"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
          ></textarea>
        </div>

        <div class="space-y-4">
          <label class="flex items-start gap-3">
            <input type="checkbox" name="taxReceipt" required class="mt-1" />
            <span class="text-gray-600 text-sm">
              Je souhaite recevoir un re√ßu fiscal pour d√©duire 66% de mon don de mes imp√¥ts
            </span>
          </label>
        </div>

        <div id="errorMessage" class="hidden p-4 bg-red-50 text-red-600 rounded-lg text-center"></div>

        <button
          type="submit"
          class="w-full bg-emerald-600 text-white px-8 py-4 rounded-lg text-lg font-medium hover:bg-emerald-700 transition-colors duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Je confirme mon don
        </button>

        <div class="text-center text-sm text-gray-600">
          <p class="mb-2">üîí Paiement 100% s√©curis√©</p>
          <p>Un re√ßu fiscal vous sera automatiquement envoy√©</p>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
import { createDonation } from '../../lib/services/donationService';

document.getElementById('donationForm')?.addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const form = e.target as HTMLFormElement;
  const formData = new FormData(form);
  const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
  const errorMessage = document.getElementById('errorMessage');
  const successContainer = document.getElementById('successContainer');
  
  submitButton.disabled = true;
  submitButton.textContent = 'Traitement en cours...';

  try {
    const amount = parseInt(formData.get('amount') as string);
    if (!amount) {
      throw new Error('Veuillez s√©lectionner un montant');
    }

    const projectId = form.dataset.projectId;
    if (!projectId) {
      throw new Error('Identifiant du projet manquant');
    }

    const donation = {
      amount,
      projectId: parseInt(projectId),
      firstName: formData.get('firstName') as string,
      lastName: formData.get('lastName') as string,
      email: formData.get('email') as string,
      phone: formData.get('phone') as string || undefined,
      message: formData.get('message') as string || undefined,
      frequency: formData.get('frequency') as 'once' | 'monthly'
    };

    const result = await createDonation(donation);

    if (result.success) {
      // Masquer le formulaire et afficher le message de succ√®s
      form.classList.add('hidden');
      if (successContainer) {
        successContainer.classList.remove('hidden');
        const donationAmountEl = document.getElementById('donationAmount');
        if (donationAmountEl) {
          donationAmountEl.textContent = amount.toString();
        }
      }
      if (errorMessage) {
        errorMessage.classList.add('hidden');
      }
    } else {
      throw new Error(result.error);
    }
  } catch (error) {
    if (errorMessage) {
      errorMessage.textContent = error.message || 'Une erreur est survenue. Veuillez r√©essayer.';
      errorMessage.classList.remove('hidden');
    }
  } finally {
    submitButton.disabled = false;
    submitButton.textContent = 'Je confirme mon don';
  }
});

// Mise √† jour dynamique du montant apr√®s d√©duction fiscale
document.querySelectorAll('input[name="amount"]').forEach(input => {
  input.addEventListener('change', (e) => {
    const amount = parseInt((e.target as HTMLInputElement).value);
    const afterTax = Math.round(amount * 0.34);
    document.getElementById('afterTaxAmount')?.textContent = afterTax.toString();
  });
});
</script>