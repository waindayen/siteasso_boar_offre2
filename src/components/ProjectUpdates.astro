---
const { updates } = Astro.props;
---

<section class="py-24 bg-emerald-50">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="font-display text-3xl font-bold text-gray-900 mb-12 text-center">
      Actualit√©s du projet
    </h2>

    <div class="space-y-8">
      {updates.map((update) => (
        <div class="bg-white rounded-xl p-6 shadow-md">
          <div class="flex items-center gap-4 mb-4">
            <div class="bg-emerald-100 text-emerald-800 px-3 py-1 rounded-full text-sm">
              {new Date(update.date).toLocaleDateString('fr-FR', { 
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">{update.title}</h3>
          <p class="text-gray-600">{update.content}</p>
        </div>
      ))}
    </div>
  </div>
</section>