---
const recentDonations = [
  {
    donor: "Jean Dupont",
    amount: "100€",
    project: "École au Sénégal",
    date: "2024-01-15"
  },
  {
    donor: "Marie Martin",
    amount: "50€",
    project: "Reforestation Madagascar",
    date: "2024-01-14"
  }
];

const recentVolunteers = [
  {
    name: "Sophie Lambert",
    role: "Communication",
    status: "En attente",
    date: "2024-01-15"
  },
  {
    name: "Pierre Dubois",
    role: "Projet éducatif",
    status: "Validé",
    date: "2024-01-13"
  }
];
---

<div class="grid md:grid-cols-2 gap-8">
  <div class="bg-white p-6 rounded-xl shadow-sm">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Derniers dons</h2>
    <div class="space-y-4">
      {recentDonations.map((donation) => (
        <div class="flex items-center justify-between p-4 border border-gray-100 rounded-lg">
          <div>
            <p class="font-medium text-gray-900">{donation.donor}</p>
            <p class="text-sm text-gray-500">{donation.project}</p>
          </div>
          <div class="text-right">
            <p class="font-medium text-emerald-600">{donation.amount}</p>
            <p class="text-sm text-gray-500">
              {new Date(donation.date).toLocaleDateString('fr-FR')}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="bg-white p-6 rounded-xl shadow-sm">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Nouveaux bénévoles</h2>
    <div class="space-y-4">
      {recentVolunteers.map((volunteer) => (
        <div class="flex items-center justify-between p-4 border border-gray-100 rounded-lg">
          <div>
            <p class="font-medium text-gray-900">{volunteer.name}</p>
            <p class="text-sm text-gray-500">{volunteer.role}</p>
          </div>
          <div class="text-right">
            <p class={`font-medium ${
              volunteer.status === 'Validé' ? 'text-emerald-600' : 'text-amber-600'
            }`}>
              {volunteer.status}
            </p>
            <p class="text-sm text-gray-500">
              {new Date(volunteer.date).toLocaleDateString('fr-FR')}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>