---
const stats = [
  {
    number: "10K+",
    label: "Enfants soutenus",
    icon: "👥"
  },
  {
    number: "50+",
    label: "Projets réalisés",
    icon: "🌟"
  },
  {
    number: "25",
    label: "Pays d'action",
    icon: "🌍"
  },
  {
    number: "1000+",
    label: "Bénévoles",
    icon: "❤️"
  },
];
---

<section class="py-24 bg-gradient-to-b from-white to-emerald-50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <span class="text-emerald-600 font-medium tracking-wider text-sm">NOTRE IMPACT</span>
      <h2 class="font-display text-4xl font-bold text-gray-900 mt-4">Des actions concrètes pour un changement durable</h2>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {
        stats.map((stat) => (
          <div class="text-center transform transition-transform duration-300 hover:scale-105">
            <div class="text-4xl mb-4">{stat.icon}</div>
            <div class="text-5xl font-bold text-emerald-600 mb-2">{stat.number}</div>
            <div class="text-gray-600 font-medium">{stat.label}</div>
          </div>
        ))
      }
    </div>
  </div>
</section>