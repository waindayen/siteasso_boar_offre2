---
const { images } = Astro.props;
---

<section class="py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="font-display text-3xl font-bold text-gray-900 mb-12 text-center">
      Galerie du projet
    </h2>

    <div class="grid md:grid-cols-3 gap-8">
      {images.map((image) => (
        <div class="group relative overflow-hidden rounded-xl">
          <img
            src={image.url}
            alt={image.caption}
            class="w-full h-64 object-cover transform transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <p class="text-white">{image.caption}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>